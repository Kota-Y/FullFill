<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dadada"
    tools:context=".MainActivity">
    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <android.support.design.widget.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/drawer_header"
            app:menu="@menu/drawer"

            android:id="@+id/main_navigation_view1">
        </android.support.design.widget.NavigationView>
    </android.support.v4.widget.DrawerLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        //グラデーション対応
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:src="@drawable/toolbar_gradation"/>
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:theme="@style/toolbarTheme"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"

            android:id="@+id/tool_bar">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:src="@drawable/fullfill_title"
                android:gravity="center"

                android:id="@+id/toolbar_icon"/>
        </android.support.v7.widget.Toolbar>
    </FrameLayout>

    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@android:id/tabhost">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="40dp">

            //タブ
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white"/>
                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp">

                <android.support.v4.widget.SwipeRefreshLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:id="@+id/swipe_refresh">
                //ここからタブ１
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tab1"
                    android:fillViewport="false"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/cardLinear"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true">
                    </LinearLayout>
                </ScrollView>
                </android.support.v4.widget.SwipeRefreshLayout>

                //ここからタブ２
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tab2"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/mypage_gradation"
                        android:scaleType="fitXY"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/fullfill_icon_white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="user's_name"
                            android:gravity="center"
                            android:textSize="@dimen/kotoba" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="あなたの好きなコトバ"
                            android:gravity="center"
                            android:textSize="12sp"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/white"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/to_your_book"
                            android:layout_weight="1">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_brightness_1_black_24dp"
                                    android:tint="@color/colorPrimary"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="17dp"
                                    android:src="@drawable/ic_bookmark_white_24dp"/>
                            </FrameLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="あなただけのコトバ"
                                android:textSize="@dimen/biggest_kotoba" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"

                            android:id="@+id/to_your_post">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_brightness_1_black_24dp"
                                    android:tint="@color/colorPrimary"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="17dp"
                                    android:src="@drawable/ic_speaker_notes_white_18dp"/>
                            </FrameLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="投稿履歴"
                                android:textSize="@dimen/biggest_kotoba"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="1"

                            android:id="@+id/to_account_settings">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_brightness_1_black_24dp"
                                    android:tint="@color/colorPrimary"/>
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="17dp"
                                    android:src="@drawable/ic_person_white_18dp"/>
                            </FrameLayout>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="アカウント設定"
                                android:textSize="@dimen/biggest_kotoba"/>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                //ここからタブ３
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tab3"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:id="@+id/rankingLinear"

                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true">
                    </LinearLayout>
                </ScrollView>

                //ここからタブ４
                <FrameLayout
                    android:id="@+id/tab4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cardcolor">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp">

                        <android.support.v7.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="あなたのコトバはなんですか"
                            android:textSize="16sp"
                            android:textColorHint="@color/subtextcolor"
                            android:layout_marginTop="100dp"
                            android:theme="@style/EditTextStyle"

                            android:id="@+id/post_yourwords" />
                        <android.support.v7.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:hint="そのコトバは誰のコトバですか"
                            android:textSize="16sp"
                            android:textColorHint="@color/subtextcolor"
                            android:layout_marginTop="30dp"
                            android:theme="@style/EditTextStyle"

                            android:id="@+id/post_whose"

                            android:layout_alignLeft="@id/post_yourwords"
                            android:layout_below="@id/post_yourwords" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/post_whose"
                            android:layout_marginTop="50dp"
                            android:text="そのコトバのジャンルを選択してください"
                            android:textColor="@color/subtextcolor"

                            android:id="@+id/post_text"/>
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_alignLeft="@id/post_yourwords"
                            android:layout_below="@id/post_text"

                            android:id="@+id/spinner_posting" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff0000"
                            android:layout_below="@id/spinner_posting"
                            android:layout_marginTop="15dp"

                            android:id="@+id/danger_text"/>
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/fullfill_icon"
                            android:layout_alignLeft="@id/post_yourwords"
                            android:id="@+id/users_icon_in_posting"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginTop="15dp"
                            android:gravity="center"
                            android:text="user_name"
                            android:textColor="@color/colorPrimary"
                            android:layout_toRightOf="@id/users_icon_in_posting"
                            android:layout_marginLeft="30dp"/>
                        <android.support.design.widget.FloatingActionButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="5dp"

                            android:id="@+id/post_button"

                            android:src="@drawable/ic_send_white_18dp"
                            design:fabSize="normal"
                            design:backgroundTint="@color/colorPrimary"
                            android:layout_alignRight="@id/post_yourwords"
                            android:layout_below="@id/spinner_posting"/>
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:theme="@style/progressCircle"
                            android:visibility="invisible"

                            android:id="@+id/progressbar"/>
                    </RelativeLayout>
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>
    //Navigationの設定
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer"

        android:id="@+id/main_navigation_view2">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>



