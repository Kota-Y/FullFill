<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        card_view:cardCornerRadius="12dp"
        android:id="@+id/card_in_ranking">
        //背景をグラデーションに
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_gradation"
            android:scaleType="fitXY"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="40dp">
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"

                android:id="@+id/icon_and_username_layout_r">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"

                    android:id="@+id/crown" />
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="3dp"

                    android:id="@+id/users_icon_r"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"

                    android:id="@+id/users_name_r"

                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/user_name"
                    android:textColor="#aaaaaa"
                    android:gravity="center" />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@color/barcolor"
                android:layout_toRightOf="@id/icon_and_username_layout_r"

                android:id="@+id/bar_card_r"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:lineSpacingMultiplier="1.3"

                android:id="@+id/kotoba_r"

                android:gravity="center_vertical"
                android:layout_gravity="left"
                android:layout_toRightOf="@id/bar_card_r"
                android:textSize="@dimen/kotoba"
                android:textColor="@color/kotobacolor"
                android:maxLines="3"
                android:ellipsize="end"
                android:scrollHorizontally="true"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_bookmark_white_middle"
                android:tint="@color/fc_icon"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:layout_alignLeft="@id/kotoba_r"

                android:id="@+id/favorited_icon_r" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:gravity="center"
                android:textSize="@dimen/star_comment"
                android:textColor="@color/subtextcolor"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/favorited_icon_r"
                android:layout_alignBottom="@id/favorited_icon_r"

                android:id="@+id/how_favorited_r"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_message_white_18dp"
                android:tint="@color/fc_icon"
                android:layout_toRightOf="@id/how_favorited_r"
                android:layout_alignBottom="@id/favorited_icon_r"

                android:id="@+id/comment_icon_r" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:gravity="center"
                android:textSize="@dimen/star_comment"
                android:textColor="@color/subtextcolor"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/comment_icon_r"
                android:layout_alignBottom="@id/comment_icon_r"

                android:id="@+id/how_commented_r"/>
            <!--<ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:tint="@color/subtextcolor"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/how_commented_r"
                android:layout_alignBottom="@id/favorited_icon_r"

                android:id="@+id/to_edit_button_r"/>-->
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/favorited_icon_r"

                android:id="@+id/whose_r"

                android:layout_alignParentRight="true"
                android:gravity="right"
                android:textSize="@dimen/whose"
                android:textColor="@color/kotobacolor"
                android:maxLines="1"
                android:ellipsize="end"
                android:scrollHorizontally="true"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:tint="@color/colorPrimaryDark"
                android:layout_marginLeft="25dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"

                android:id="@+id/company_sign_r"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/colorPrimary"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"

                android:id="@+id/bookmark_sign_r"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>